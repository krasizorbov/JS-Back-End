<div class="container">
    <h1 class="my-4">Title : {{title}}</h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="{{imageUrl}}" alt="JavaScript" />
        </div>

        <div class="col-md-4 text-center">
            <h4 class="my-3">Duration</h4>
            <p>{{duration}}</p>
            <h3 class="my-3">Description</h3>
            <p>{{description}}</p>
            {{#if isCreator}}
            <a class="btn btn-danger" href="/course/delete/{{_id}}">Delete</a>
            <a class="btn btn-warning" href="/course/edit/{{_id}}">Edit</a>
            {{else}}
            {{#if isEnrolled}}
            <span class="enrolled-span">You are already enrolled</span>
            {{else}}
            <a class="btn btn-primary" href="/course/enroll/{{_id}}">Enroll</a>
            {{/if}}
            {{/if}}
        </div>
    </div>
</div>